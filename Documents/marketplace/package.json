{
  "name": "marketplace",
  "version": "0.1.0",
  "private": true,
  "description": "Ozon-like marketplace monorepo. Go + Next.js, DDD, Clean Architecture.",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@marketplace/eslint-config": "workspace:*",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20"
  }
}
